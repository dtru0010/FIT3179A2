{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": "Title",
    "width": 800,
    "height": 450,
    "data": {
      "url": "https://raw.githubusercontent.com/dtru0010/FIT3179A2/refs/heads/main/data/assignment/aus_energy_mix_portions.csv",
      "format": {"type": "csv"}
    },
    "params": [
      {
        "name": "fuel_selection",
        "select": {
          "type": "point",
          "fields": ["Fuel_Type"]
        },
        "bind": "legend"
      }
    ],
    "transform": [
      {
        "calculate": "if(datum.Fuel_Type == 'Oil', 0, if(datum.Fuel_Type == 'Coal', 1, if(datum.Fuel_Type == 'Gas', 2, 3)))",
        "as": "fuel_order"
      }
    ],
    "encoding": {
      "x": {
        "field": "Year",
        "type": "nominal",
        "title": "Year",
        "axis": {
          "labelAngle": 45
        }
      },
      "y": {
        "field": "Portion",
        "type": "quantitative",
        "title": "Percent",
        "scale": {
          "domainMax": 100
        }
      },
      "color": {
        "field": "Fuel_Type",
        "type": "nominal",
        "title": "Fuel Type"
      },
      "order": {"field": "fuel_order"}
    },
    "layer": [
      {
        "mark": {"type": "area"},
        "encoding": {
          "tooltip": [
            {
              "field":"Fuel_Type",
              "type": "nominal",
              "title": "Fuel Type:"
            },
            {
              "field": "Year",
              "type": "nominal",
              "title": "Year:"
            },
            {
              "field": "Portion",
              "type": "quantitative",
              "title": "Energy Mix Portion (%):",
              "format": ".2f"
            }
          ],
          "opacity": {
            "condition": {"param": "fuel_selection", "value": 1},
            "value": 0.2
          }
        }
      }
    ]
  }