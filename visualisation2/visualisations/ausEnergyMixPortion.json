{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {
    "text": "Energy Mix over Time",
    "fontSize": 14,
    "dx": -99
  },
  "width": 340,
  "height": 200,
  "background": "#FDFBF9",
  "view": {"fill": "#FDFBF9"},
  "data": {
    "url": "https://raw.githubusercontent.com/dtru0010/FIT3179A2/refs/heads/main/visualisation2/data/aus_energy_mix_portions.csv",
    "format": {"type": "csv"}
  },
  "encoding": {
    "x": {
      "field": "Year",
      "type": "nominal",
      "title": "Year",
      "axis": {
        "labelAngle": -45,
        "title": null
      }
    }
  },
  "transform": [
    {
      "calculate": "if(datum.Fuel_Type == 'Oil', 0, if(datum.Fuel_Type == 'Coal ', 1, if(datum.Fuel_Type == 'Gas', 2, 3)))",
      "as": "fuel_order"
    }
  ],
  "layer": [
    {
      "mark": {"type": "area"},
      "encoding": {
        "y": {
          "field": "Portion",
          "type": "quantitative",
          "title": "Portion of Consumption (%)",
          "scale": {
            "domainMax": 100
          }
        },
        "color": {
          "field": "Fuel_Type",
          "type": "nominal",
          "title": "Fuel Type",
          "scale": {
            "domain": ["Renewables", "Gas", "Coal ", "Oil"],
            "range": ["#a1d99b","#a583cc","#4c78a8","#f2cf5b"]
          }
        },
        "order": {"field": "fuel_order"} 
      }
    },
    {
      "params": [
        {
          "name": "hover",
          "select": {
            "type": "point",
            "fields": ["Year"],
            "nearest": true,
            "on": "pointerover",
            "clear": "pointerout"
          }
        }
      ],
      "transform": [
        {
          "pivot": "Fuel_Type",
          "value": "Portion",
          "groupby": ["Year"]
        }
      ],
      "mark": "rule",
      "encoding": {
        "opacity": {
          "condition": {
            "param": "hover",
            "empty": false,
            "value": 0.5
          },
          "value": 0
        },
        "tooltip": [
          {
            "field": "Year",
            "type": "nominal",
            "title": "Year:"
          },
          {
            "field": "Renewables",
            "type": "quantitative",
            "title": "Renewables (%):",
            "format": ".2f"
          },
          {
            "field": "Gas",
            "type": "quantitative",
            "title": "Gas (%):",
            "format": ".2f"
          },
          {
            "field": "Coal ",
            "type": "quantitative",
            "title": "Coal (%):",
            "format": ".2f"
          },
          {
            "field": "Oil",
            "type": "quantitative",
            "title": "Oil (%):",
            "format": ".2f"
          }
        ]
      }
    }
  ]
}