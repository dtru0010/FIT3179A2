{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": {
      "text": "Global Share of Energy Consumption originating based on Fuel Type",
      "fontSize": 17
    },
    "width": 800,
    "height": 450,
    "background": "#FDFBF9",
    "view": {"fill": "#FDFBF9"},
    "projection": {"type": "equirectangular"},
    "params": [
      {
        "name": "year_selection",
        "value": 2023,
        "bind": {
          "input": "range",
          "min": 2000,
          "max": 2023,
          "step": 1,
          "name": "Year Selected:"
        }
      },
      {
        "name": "fuel_selection",
        "value": "Coal",
        "bind": {
          "input": "select",
          "options" : [
            "Coal",
            "Oil",
            "Gas",
            "Renewables"
          ],
          "labels": [
            "Coal",
            "Oil",
            "Natural Gas",
            "Renewables"
          ],
          "name": "Fuel Type:"
        }
      }
    ],
    "layer": [
      {
        "data": {
          "url": "https://raw.githubusercontent.com/dtru0010/FIT3179A2/refs/heads/main/visualisation2/data/oceans.json",
          "format": {
            "type": "topojson",
            "feature": "oceans"
          }
        },
        "mark": {
          "type": "geoshape",
          "fill": "skyblue"
        }
      },
      {
        "data": {
          "url": "https://raw.githubusercontent.com/dtru0010/FIT3179A2/refs/heads/main/visualisation2/data/ne_110m.json",
          "format": {
            "type": "topojson",
            "feature": "ne_110m_admin_0_countries"
          }
        },
        "mark": {
          "type": "geoshape",
          "fill": "lightgray",
          "stroke": "gray",
          "strokeWidth": 1
        },
        "transform": [
          {
            "calculate": "'Data is not available in ' + datum.properties.NAME + '.'",
            "as": "note"
          }
        ],
        "encoding": { "tooltip": {"field": "note"} }
      },
      {
        "data": {
          "url": "https://raw.githubusercontent.com/dtru0010/FIT3179A2/refs/heads/main/visualisation2/data/world_share_fuel_consumption_percent.csv",
          "format": {"type": "csv"}
        },
        "transform": [
          {"filter": "datum.Fuel_Type == fuel_selection"},
          {"filter": "datum.Year == year_selection"},
          {
            "lookup": "Code",
            "from": {
              "data": {
                "url": "https://raw.githubusercontent.com/dtru0010/FIT3179A2/refs/heads/main/visualisation2/data/ne_110m.json",
                "format": {
                  "type": "topojson",
                  "feature": "ne_110m_admin_0_countries"
                }
              },
              "key": "properties.ADM0_A3"
            },
            "as": "geo"
          }
        ],
        "mark": {
          "type": "geoshape",
          "stroke": "gray"
        },
        "encoding": {
          "shape": {
            "field": "geo",
            "type": "geojson"
          },
          "color": {
            "field": "Share_Percent",
            "type": "quantitative",
            "title": "Share (%)",
            "scale": {
              "domainMin": 0,
              "domainMax": 100,
              "domain": [5, 10, 20, 40, 60, 80],
              "range": [
                "#ffffcc",
                "#ffeda0",
                "#feb24c",
                "#fc4e2a",
                "#bd0026",
                "#800026"
              ]
            }
          },
          "tooltip": [
            {
              "field": "Country",
              "type": "nominal",
              "title": "Country:"
            },
            {
              "field": "Year",
              "type": "nominal",
              "title": "Year:"
            },
            {
              "field": "Fuel_Type",
              "type": "nominal",
              "title": "Fuel:"
            },
            {
              "field": "Share_Percent",
              "type": "quantitative",
              "title": "Share (%):",
              "format": ".2f"
            }
          ]
        }
      },
      {
        "data": {
          "url": "https://raw.githubusercontent.com/dtru0010/FIT3179A2/refs/heads/main/visualisation2/data/ne_110m.json",
          "format": {
            "type": "topojson",
            "feature": "ne_110m_graticules_30"
          }
        },
        "mark": {
          "type": "geoshape",
          "stroke": "white",
          "strokeWidth": 1,
          "fill": null
        }
      }
    ]
  }